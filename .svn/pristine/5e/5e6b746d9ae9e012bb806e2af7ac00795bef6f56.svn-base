
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
   
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_marginLeft="100dp"
		android:layout_marginRight="100dp"
        >

        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/fragment_setting_guide"
                android:gravity="center_vertical"
                
                />
            <TextView 
                android:id="@+id/fragment_setting_isneedguide"
                android:layout_alignParentRight="true"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="@string/fragment_setting_guide1"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                />
            
        </RelativeLayout>
       
        
        
        
        
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/fragment_setting_language"
                android:gravity="center_vertical"
                />
            <TextView 
                android:id="@+id/fragment_setting_language"
                android:layout_alignParentRight="true"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="@string/fragment_setting_language1"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                />
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/fragment_setting_control"
                android:gravity="center_vertical"
                />
            <TextView 
                android:id="@+id/fragment_setting_controlmodel"
                android:layout_alignParentRight="true"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="@string/fragment_setting_control1"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                />
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/fragment_setting_air"
                android:gravity="center_vertical"
                />
            <TextView 
                android:id="@+id/fragment_setting_air"
                android:layout_alignParentRight="true"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="@string/fragment_setting_setting"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                />
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/fragment_setting_soil"
                android:gravity="center_vertical"
                />
            <TextView 
                android:id="@+id/fragment_setting_earth"
                android:layout_alignParentRight="true"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="@string/fragment_setting_setting"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                />
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/fragment_setting_light"
                android:gravity="center_vertical"
                />
            <TextView 
                android:id="@+id/fragment_setting_light"
                android:layout_alignParentRight="true"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="@string/fragment_setting_setting"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                />
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/fragment_setting_co2"
                android:gravity="center_vertical"
                />
            <TextView 
                android:id="@+id/fragment_setting_co2"
                android:layout_alignParentRight="true"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="@string/fragment_setting_setting"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                />
            
        </RelativeLayout>
        
    </LinearLayout>
    
    
  

</LinearLayout>
